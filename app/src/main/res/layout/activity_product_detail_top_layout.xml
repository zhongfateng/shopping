<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/bg_all"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:visibility="gone"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="325dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/product_img_bg"
        android:layout_height="325dp">
        <com.liuwa.shopping.view.AutoScrollViewPager
            android:id="@+id/index_auto_scroll_view"
            android:layout_margin="8dp"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="@string/ceshi"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/money_color"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_alignBottom="@+id/tv_price"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:textColor="@color/ship_color"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:textColor="@color/ship_color"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:textColor="@color/ship_color"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="规格"
                android:textSize="13sp"
                android:textColor="@color/ship_color"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/ceshi"
                android:textSize="13sp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/product_name_color"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="时间"
                android:textSize="13sp"
                android:textColor="@color/ship_color"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/ceshi"
                android:textSize="13sp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/product_name_color"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:layout_height="58dp">
        <GridView
            android:id="@+id/gw_toumai"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:numColumns="5"
            android:layout_toLeftOf="@+id/rl_right"
            android:horizontalSpacing="7dp"
            android:layout_height="wrap_content">
        </GridView>
        <LinearLayout
            android:id="@+id/rl_right"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:text="已有"
                android:textColor="@color/product_name_color"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:text="@string/ceshi"
                android:textColor="@color/tab_line"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:text="人购买>"
                android:textColor="@color/product_name_color"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="邻居都在买"
            android:drawableLeft="@mipmap/icon_left"
            android:drawablePadding="6dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <GridView
            android:id="@+id/gw_list"
            android:layout_marginTop="15dp"
            android:horizontalSpacing="23dp"
            android:numColumns="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></GridView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"

            android:text="为您推荐"
            android:layout_height="wrap_content" />
            <View
                android:layout_width="20dp"
                android:layout_height="3dp"
                android:layout_marginTop="7dp"
                android:background="@color/tab_line"></View>
        </LinearLayout>
        <com.liuwa.shopping.view.MyGridView
            android:id="@+id/gw_tuijian"
            android:layout_marginTop="17dp"
            android:layout_width="match_parent"
            android:numColumns="2"
            android:layout_marginLeft="15dp"
            android:verticalSpacing="7dp"
            android:layout_marginRight="15dp"
            android:horizontalSpacing="22dp"
            android:layout_height="wrap_content"></com.liuwa.shopping.view.MyGridView>
    </LinearLayout>
</LinearLayout>
