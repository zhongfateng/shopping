<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/top_jianbian"
        android:fitsSystemWindows="true"
        android:layout_height="211dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/transparent"
            android:layout_alignParentTop="true"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/btn_back"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/top_title_color"
                android:textSize="18sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="26dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/touxiang"
                android:layout_alignParentLeft="true"
                android:id="@+id/img_left"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/img_left"
                android:layout_alignBottom="@+id/img_left"
                android:layout_alignTop="@+id/img_left"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:text="@string/ceshi"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_tel"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:text="@string/ceshi"
                        android:layout_marginLeft="7dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_regison"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"
                    android:text="绑定社区：安侨国际写字楼A座101"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/head_center_bg"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:layout_height="43dp">
            <TextView
                android:id="@+id/tv_yongjin"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/tab_line"
                android:text="@string/ceshi"
                android:layout_marginLeft="17dp"
                android:textSize="12sp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_weidaozhang"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/tab_line"
                android:text="@string/ceshi"
                android:layout_marginRight="17dp"
                android:textSize="12sp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_favoriate_item"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:id="@+id/saomashouhuo"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:background="@mipmap/cir_bg"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@mipmap/souhuo"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/integral_color"
                        android:text="团长收货"
                        android:layout_marginTop="7dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:id="@+id/ll_saomatihuo"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:background="@mipmap/cir_bg"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@mipmap/souhuo"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/integral_color"
                        android:text="扫码核销"
                        android:layout_marginTop="7dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/view_line"
                android:layout_height="0.2dp"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:id="@+id/tv_xiaoliang"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="商品销售排行"
                        android:textSize="12sp"
                        android:drawableLeft="@mipmap/paihang"
                        android:textColor="@color/integral_color"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_yongjin"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="佣金明细"
                        android:textSize="12sp"
                        android:drawableLeft="@mipmap/mingxi"
                        android:textColor="@color/integral_color"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_add_header"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="添加副团长"
                        android:textSize="12sp"
                        android:drawableLeft="@mipmap/add_header"
                        android:textColor="@color/integral_color"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_favoriate_item"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingLeft="18dp"
                android:id="@+id/rl_back"
                android:paddingRight="18dp"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="返回个人中心"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:drawableLeft="@mipmap/person_left"
                    android:drawablePadding="19dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/view_line"
                android:layout_height="0.2dp"></View>
            <RelativeLayout
                android:id="@+id/rl_question"
                android:layout_width="match_parent"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="常见问题"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:drawableLeft="@mipmap/help_icon"
                    android:drawablePadding="19dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/arrow"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/view_line"
                android:layout_height="0.2dp"></View>
            <RelativeLayout
                android:id="@+id/rl_connect"
                android:layout_width="match_parent"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="联系客服"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:drawableLeft="@mipmap/connect_icon"
                    android:drawablePadding="19dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/arrow"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
