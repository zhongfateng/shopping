<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_favoriate_item"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="61dp"
            android:src="@mipmap/img_show"
            android:id="@+id/img_show"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_height="62dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/img_show"
            android:layout_alignBottom="@+id/img_show"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/img_show"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:textSize="13sp"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:text="@string/long_ceshi"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/jie_c"
                    android:text="单价 ："
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/jie_c"
                    android:text="单价 ："
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/jie_c"
                    android:text="数量 ："
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/jie_c"
                    android:text="单价 ："
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:text="实付金额 ："
                android:textColor="@color/jie_c"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/money_color"
                android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
