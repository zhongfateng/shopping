<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_favoriate_item"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="@color/tab_line"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/view_line"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_left"
            android:layout_width="71dp"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/img_show"
            android:layout_centerVertical="true"
            android:layout_height="71dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/img_left"
            android:layout_alignTop="@+id/img_left"
            android:layout_marginLeft="11dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/name_color"
                android:layout_alignParentTop="true"
                android:lines="2"
                android:layout_toLeftOf="@+id/ll_right"
                android:ellipsize="end"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_right"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:textSize="11sp"
                    android:text="@string/ceshi"
                    android:textColor="@color/detail_address_color"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_order_num"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="实际"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="17dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_tuikuan"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:background="@mipmap/tuihu"
            android:visibility="invisible"
            android:textSize="12sp"
            android:text="申请退款"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_queren"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:background="@mipmap/tuihu"
            android:visibility="invisible"
            android:textSize="12sp"
            android:text="确认收货"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:background="@mipmap/bg_ci"
            android:textSize="12sp"
            android:text="查看详情"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
