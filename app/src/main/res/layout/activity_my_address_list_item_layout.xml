<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingRight="15dp"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_addresss_name"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/shouhuoren"
            android:textSize="13sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_link_num"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/shouhuoren"
            android:textSize="13sp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_detail_address"
        android:layout_width="match_parent"
        android:textColor="@color/detail_address_color"
        android:textSize="12sp"
        android:maxLines="2"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/view_line"
        ></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp">
        <TextView
            android:id="@+id/ctv_flag"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="默认地址"
            android:textColor="@color/tab_line"
            android:drawablePadding="9dp"
            android:drawableLeft="@mipmap/check"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_delete_address"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="删除"
            android:textSize="11sp"
            android:drawableLeft="@mipmap/delete_icon"
            android:drawablePadding="9dp"
            android:textColor="@color/delete_color"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="11sp"
            android:layout_toLeftOf="@+id/tv_delete_address"
            android:drawableLeft="@mipmap/edit_icon"
            android:layout_marginRight="20dp"
            android:text="编辑"
            android:drawablePadding="9dp"
            android:textColor="@color/delete_color"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
