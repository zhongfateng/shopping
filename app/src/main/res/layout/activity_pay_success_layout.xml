<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/activity_top_title_layout"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:background="@color/white"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/img_pay_success"
            android:layout_marginTop="60dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="17sp"
            android:layout_marginTop="7dp"
            android:id="@+id/tv_success"
            android:text="@string/pay_success"
            android:textColor="@color/tab_color"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            android:text="我们将尽快为您发货"
            android:textColor="@color/dd_color"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="wrap_content"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="51dp"
            android:text="查看订单详情"
            android:background="@mipmap/tb_bg_c"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
