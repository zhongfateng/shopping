<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="14dp"
    android:paddingBottom="14dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/img_show_ll"
        android:layout_width="wrap_content"
        android:background="@mipmap/juxing_bg"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_show"
        android:layout_width="110dp"
        android:layout_margin="3dp"
        android:src="@mipmap/img_show"
        android:scaleType="fitXY"
        android:layout_height="110dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/img_show_ll"
        android:layout_alignTop="@+id/img_show_ll"
        android:layout_marginLeft="12dp"
        android:orientation="vertical"
        android:layout_alignBottom="@+id/img_show_ll"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_show_name"
            android:layout_width="wrap_content"
            android:textSize="13sp"
            android:lines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:background="@mipmap/changxiao"
                android:text="@string/changxiao"
                android:textSize="9sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:background="@mipmap/xiangou"
                android:text="@string/xiangou"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="9sp"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/sp_14"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/money_show_color"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img_buy"
                android:layout_width="wrap_content"
                android:src="@mipmap/cart_index"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
            android:id="@+id/tv_price_tag"
            android:layout_width="wrap_content"
            android:textColor="@color/market_price"
            android:textSize="10sp"
            android:layout_alignParentLeft="true"
            android:text="市场价"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_market_price"
                android:layout_width="wrap_content"
                android:textColor="@color/market_price"
                android:textSize="10sp"
                android:layout_toRightOf="@+id/tv_price_tag"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_kucun"
                android:layout_width="wrap_content"
                android:textColor="@color/market_price"
                android:textSize="10sp"
                android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_sell_num"
                    android:layout_width="wrap_content"
                    android:textColor="@color/market_price"
                    android:textSize="10sp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
