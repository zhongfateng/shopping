<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/activity_top_title_layout"></include>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/bg_all"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:layout_height="89dp">
            <ImageView
                android:id="@+id/img_left"
                android:layout_width="71dp"
                android:src="@mipmap/img_show"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_height="71dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/img_left"
                android:orientation="vertical"
                android:layout_alignTop="@+id/img_left"
                android:layout_marginLeft="12dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/name_color"
                        android:layout_alignParentLeft="true"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/m_color"
                        android:layout_alignParentRight="true"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/name_color"
                        android:layout_alignParentLeft="true"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/detail_address_color"
                        android:layout_alignParentRight="true"
                        android:textSize="11sp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:padding="14dp"
            android:layout_height="191dp">
            <EditText
                android:layout_width="match_parent"
                android:background="@null"
                android:lines="5"
                android:textSize="14sp"
                android:gravity="left"
                android:hint="@string/comment_hint"
                android:textColorHint="@color/h_color"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@mipmap/bg_pic"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_height="wrap_content" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/add_pic"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="添加图片"
                    android:textSize="11sp"
                    android:textColor="@color/h_color"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:paddingLeft="14dp"
            android:paddingBottom="14dp"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="综合评价"
                android:layout_height="wrap_content" />
            <RatingBar
                android:id="@+id/rate_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:isIndicator="false"
                style="@style/mRatingBar"
                android:clickable="false"
                android:numStars="5"
                android:rating="0"
                android:stepSize="1.0" />
        </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_line"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="商品描述"
                    android:layout_height="wrap_content" />
                <RatingBar
                    android:id="@+id/rate_sp_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:isIndicator="false"
                    style="@style/mRatingBar"
                    android:clickable="false"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="1.0" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_line"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="物流态度"
                    android:layout_height="wrap_content" />
                <RatingBar
                    android:id="@+id/rate_wl_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:isIndicator="false"
                    style="@style/mRatingBar"
                    android:clickable="false"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="1.0" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_line"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="服务态度"
                    android:layout_height="wrap_content" />
                <RatingBar
                    android:id="@+id/rate_fu_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:isIndicator="false"
                    style="@style/mRatingBar"
                    android:clickable="false"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="1.0" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="提交"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:background="@color/tab_line"
        android:layout_height="43dp" />
    </RelativeLayout>
</LinearLayout>
