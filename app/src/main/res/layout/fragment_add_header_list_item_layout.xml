<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_height="wrap_content">
    <com.liuwa.shopping.view.CircleImageView
        android:id="@+id/circle_left"
        android:layout_width="45dp"
        android:src="@mipmap/img_show"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_height="45dp" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:text="@string/ceshi"
            android:layout_toRightOf="@+id/circle_left"
            android:textSize="13sp"
            android:layout_marginLeft="7dp"
            android:layout_alignTop="@+id/circle_left"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:textColor="@color/b_gray"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/circle_left"
            android:layout_gravity="bottom"
            android:layout_marginLeft="7dp"
            android:text="@string/ceshi"
            android:layout_alignBottom="@+id/circle_left"
            android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:background="@drawable/header_delete_bg"
                android:text="拒绝"
                android:gravity="center"
                android:textColor="@color/tab_line"
                android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_agress"
            android:layout_width="wrap_content"
            android:background="@drawable/header_agress_bg"
            android:text="同意"
            android:layout_marginLeft="9dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>
